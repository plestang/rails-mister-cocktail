<div class="container">
  <h1>My cocktails</h1>
  <div class="row">
  </div>
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">Fancy cocktails</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p> Peter's choice </p>
          </div>
          <%= link_to cocktail.name, cocktail_path(cocktail.id), class: 'card-link' %>
        </div>
      </div>
    <% end %>
</div>

